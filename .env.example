# VisionQA Environment Variables
# Kendi .env dosyanızı oluşturun: cp .env.example .env
# ÖNEMLI: .env dosyasını Git'e ASLA commit ETMEYİN!

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://visionqa:visionqa_dev_password@localhost:5432/visionqa_db
POSTGRES_USER=visionqa
POSTGRES_PASSWORD=visionqa_dev_password
POSTGRES_DB=visionqa_db

# ============================================
# REDIS (Cache & Task Queue)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AI MODEL APIs (Buraya kendi key'lerinizi ekleyin!)
# ============================================

# SAM3 (Segment Anything Model) - UI Element Detection
# Provider: Replicate veya HuggingFace
SAM3_API_KEY=your_sam3_api_key_here
SAM3_API_PROVIDER=replicate  # veya huggingface

# DINO-X (Visual Grounding) - Object Detection
DINOX_API_KEY=your_dinox_api_key_here
DINOX_API_PROVIDER=replicate  # veya huggingface

# LLM (Large Language Model) - Scenario Generation & Reports
# Seçenekler: openai, anthropic, ollama
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Claude kullanıyorsanız

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
FRONTEND_PORT=3000

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# PLATFORM EXECUTORS (Opsiyonel)
# ============================================

# BrowserStack / Sauce Labs (Mobile testing için)
# BROWSERSTACK_USERNAME=
# BROWSERSTACK_ACCESS_KEY=

# ============================================
# MONITORING (Production için)
# ============================================
# SENTRY_DSN=
